<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Registro">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="Ingrese su nombre"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                />
            <EditText
                android:id="@+id/registroNombre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:hint="Nombre"

                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_selector"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="5"
                android:textColor="#000000"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="Ingrese su correo"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                />
            <EditText
                android:id="@+id/registroemail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:hint="Email"

                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_selector"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="5"
                android:textColor="#000000"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="Ingrese su contraseña"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                />
            <EditText
                android:id="@+id/registropassword"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="Contraseña"

                android:textAlignment="gravity"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_selector"
                android:shadowColor="#A8A8A8"
                android:shadowRadius="5"
                android:textColor="#000000"
                />

            <com.spark.submitbutton.SubmitButton
                android:textSize="12dp"
                android:id="@+id/btnRegistrarUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registrar"
                android:textColor="@color/white"
                app:sub_btn_background="#10FFFFFF"
                app:sub_btn_duration="3000"
                app:sub_btn_line_color="@color/white"
                app:sub_btn_ripple_color="#000"
                app:sub_btn_tick_color="#000" />

        </LinearLayout>


</android.support.constraint.ConstraintLayout>